extends layout.pug

block content
    div(class="row")
        form(action='/request/new/password' method='POST' id='forgot_password')
            div(class='input-field row')
                label(for='email')= forms.email
                input(type='text' id='email' data-validate-field='email' name='email')
            button(class="btn waves-effect waves-light" type="submit" name="action") #{forms.send}

block scripts            
    script(src='/js/just-validate.js' type='application/javascript')
    script(src='/js/forgot_password.js' type='module')